<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text" />

    <style name="Text.Item" />

    <style name="Text.Item.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Item.Common">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Common">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="Input">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/input_text_color</item>
    </style>

    <style name="CommonDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>